<div class='center'>
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col s6">
      <%= image_tag @product.image.url(:large) %>
    </div>

    <div class="col s6">
    <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Year:</strong>
    <%= @product.year %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

      <button class="btn-large yellow lighten-3 show-button black-text">
        <%= link_to 'Edit', edit_product_path(@product) %>
      </button>

      <button class="btn-large blue lighten-3">
        <%= link_to 'Back', products_path %>
      </button>
  
    </div>
</div>


